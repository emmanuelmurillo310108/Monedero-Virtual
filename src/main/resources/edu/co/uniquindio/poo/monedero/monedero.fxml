<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15"
      fx:controller="edu.co.uniquindio.poo.monedero.viewController.MonederoViewController"
      xmlns:fx="http://javafx.com/fxml">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>

        <Label text="Monedero" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <HBox spacing="10">
            <children>
                <Label text="Nombre:"/>
                <Label fx:id="lblNombreMonedero"/>
            </children>
        </HBox>

        <HBox spacing="10">
            <children>
                <Label text="Saldo:"/>
                <Label fx:id="lblSaldo"/>
            </children>
        </HBox>

        <TextField fx:id="txtMonto" promptText="Monto a operar"/>

        <HBox spacing="10">
            <children>
                <Button text="Depositar" onAction="#depositar"/>
                <Button text="Retirar" onAction="#retirar"/>
            </children>
        </HBox>

        <Button text="Realizar TransacciÃ³n" onAction="#abrirTransaccion"/>

        <Label text="Historial de Transacciones:"/>
        <TableView fx:id="tablaHistorial" prefHeight="300"/>

        <Button text="Volver" onAction="#volver"/>

    </children>

</VBox>


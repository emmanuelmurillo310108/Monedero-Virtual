<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15"
      fx:controller="edu.co.uniquindio.poo.monedero.viewController.ClienteViewController"
      stylesheets="@styles.css"
      xmlns:fx="http://javafx.com/fxml">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>

        <Label text="Información del Cliente" styleClass="title"/>

        <GridPane hgap="10" vgap="10">
            <children>
                <Label text="Nombre:"/>
                <Label fx:id="lblNombre"/>

                <Label text="Email:" GridPane.rowIndex="1"/>
                <Label fx:id="lblEmail" GridPane.rowIndex="1"/>

                <Label text="Teléfono:" GridPane.rowIndex="2"/>
                <Label fx:id="lblTelefono" GridPane.rowIndex="2"/>

                <Label text="Puntos:" GridPane.rowIndex="3"/>
                <Label fx:id="lblPuntos" GridPane.rowIndex="3"/>

                <Label text="Rango:" GridPane.rowIndex="4"/>
                <Label fx:id="lblRango" GridPane.rowIndex="4"/>
            </children>
        </GridPane>

        <Label text="Monederos del Cliente:" styleClass="subtitle"/>

        <TableView fx:id="tablaMonederos" prefHeight="300">
            <columns>
                <TableColumn fx:id="colNombreMonedero" text="Nombre"/>
                <TableColumn fx:id="colSaldoMonedero" text="Saldo"/>
            </columns>
        </TableView>

        <Button text="Ver Monedero" onAction="#abrirMonedero"/>
        <Button text="Volver" onAction="#volver"/>

    </children>

</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" stylesheets="@styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="edu.co.uniquindio.poo.monedero.viewController.ClienteViewController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <children>

        <Label styleClass="title" text="Información del Cliente" />

        <GridPane hgap="10" vgap="10">
            <children>
                <Label text="Nombre:" />
                <Label fx:id="lblNombre">
               <padding>
                  <Insets left="52.0" />
               </padding></Label>

                <Label text="Email:" GridPane.rowIndex="1" />
                <Label fx:id="lblEmail" GridPane.rowIndex="1">
               <padding>
                  <Insets left="38.0" />
               </padding></Label>

                <Label text="Teléfono:" GridPane.rowIndex="2" />
                <Label fx:id="lblTelefono" GridPane.rowIndex="2">
               <padding>
                  <Insets left="52.0" />
               </padding></Label>

                <Label text="Puntos:" GridPane.rowIndex="3" />
                <Label fx:id="lblPuntos" GridPane.rowIndex="3">
               <padding>
                  <Insets left="43.0" />
               </padding></Label>

                <Label text="Rango:" GridPane.rowIndex="4" />
                <Label fx:id="lblRango" GridPane.rowIndex="4">
               <padding>
                  <Insets left="42.0" />
               </padding></Label>
            </children>
         <columnConstraints>
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <Label styleClass="subtitle" text="Monederos del Cliente:" />

        <TableView fx:id="tablaMonederos" prefHeight="300">
            <columns>
                <TableColumn fx:id="colNombreMonedero" text="Nombre" />
                <TableColumn fx:id="colSaldoMonedero" text="Saldo" />
            </columns>
        </TableView>

        <Button onAction="#abrirMonedero" text="Ver Monedero" />
        <Button onAction="#volver" text="Volver" />

    </children>

</VBox>
